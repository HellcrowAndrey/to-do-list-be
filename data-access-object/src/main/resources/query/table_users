CREATE TABLE Users (
  ID int NOT NULL AUTO_INCREMENT,
  USER VARCHAR (50) NOT NULL,
  EMAIL VARCHAR (100) NOT NULL,
  PASSWORD VARCHAR (100) NOT NULL,
  PRIMARY KEY (ID)
);

SELECT ID, USER, EMAIL, PASSWORD FROM Users WHERE USER=? OR EMAIL=? AND PASSWORD=?;

INSERT INTO Users (USER, EMAIL, PASSWORD) VALUES (?, ?, ?);

UPDATE Users SET  EMAIL=?, PASSWORD=? WHERE USER=?;

DELETE FROM Users WHERE USER=? OR EMAIL=? AND PASSWORD=?;

ALTER TABLE Users ADD UNIQUE (login, email);
