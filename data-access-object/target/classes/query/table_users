CREATE TABLE Users (
  ID int NOT NULL AUTO_INCREMENT,
  LOGIN VARCHAR (50) NOT NULL,
  EMAIL VARCHAR (100) NOT NULL,
  HASH_LOGIN VARCHAR (255) NOT NULL,
  HASH_EMAIL VARCHAR (255) NOT NULL,
  PRIMARY KEY (ID)
);

SELECT ID, LOGIN, EMAIL, PASSWORD FROM Users WHERE LOGIN=? OR EMAIL=? AND PASSWORD=?;

INSERT INTO Users (LOGIN, EMAIL, PASSWORD) VALUES (?, ?, ?);

UPDATE Users SET  EMAIL=?, PASSWORD=? WHERE LOGIN=?;

DELETE FROM Users WHERE LOGIN=? OR EMAIL=? AND PASSWORD=?;

ALTER TABLE Users ADD UNIQUE (LOGIN, EMAIL);
